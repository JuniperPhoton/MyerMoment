            		<Run Text="L"/>
            		<Run FontSize="40" Text="ife"/>
            		<Run Text=" is"/>
                </TextBlock>
                <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="53.333" FontFamily="Font/PRISTINA.TTF#Pristina" Margin="-4,46,0,-41">
            		<Run FontSize="66.667" Text="D"/>
                </TextBlock>
                <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="53.333" FontFamily="Font/PRISTINA.TTF#Pristina" Margin="41,46,-41,-31" Text="elicious"/>
                <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="9.333" FontFamily="Font/FZYTK.TTF#FZYaoTi" Margin="39,93,-17,-18" Text="enjoy and embrace life "/>
            </Grid>
            <Grid x:Name="sceneGrid" ManipulationMode="TranslateX,TranslateY" LostFocus="textGrid_LostFocus" Tapped="textGrid_Tapped"  PointerEntered="TextView_OnPointerEntered" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="103.167,0,103.833,0" Visibility="Collapsed">
                <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="53.333" FontFamily="Font/FZYTK.TTF#FZYaoTi" Text="地球" Foreground="Black" Margin="1,1,-1,0"/>
                <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20" FontFamily="Font/FZYTK.TTF#FZYaoTi" Margin="16,62,0,-7" Text="在我脚下" RenderTransformOrigin="0.5,0.5" Foreground="Black">
                    <TextBlock.RenderTransform>
                        <CompositeTransform ScaleX="1.2" ScaleY="0.8"/>
                    </TextBlock.RenderTransform>
                </TextBlock>
                <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="53.333" FontFamily="Font/FZYTK.TTF#FZYaoTi" Text="地球"/>
