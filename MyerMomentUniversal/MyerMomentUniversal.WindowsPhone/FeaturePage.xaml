<Page
    x:Class="MyerMomentUniversal.FeaturePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyerMomentUniversal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Background="#FFEAEAEA"
    >
    <Grid>
        <FlipView>
            <Image Source="Assets/Feature-Gesture.jpg" Margin="0,0,0,69"/>

            <Image Source="Assets/Feature-Tile.jpg" Margin="0,0,0,69"/>
            <Image Source="Assets/Feature-Cortana.jpg" Margin="0,0,0,69"/>

        </FlipView>
        <Button Style="{StaticResource ButtonStyle2}" MinHeight="10" MinWidth="10" Click="EnterClick" BorderThickness="0" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Margin="10,0,10,10" Height="45">
            <Border Background="{StaticResource MomentThemeColor}">
                <TextBlock Text="Enter MyerMoment" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{StaticResource MomentThemeBlack}"/>
            </Border>
        </Button>
    </Grid>
</Page>
