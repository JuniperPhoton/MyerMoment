<Page
    x:Class="MyerMomentUniversal.FeaturePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MyerMomentUniversal"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    >
    <Page.Background>
        <SolidColorBrush>#FF1E1E1E</SolidColorBrush>
    </Page.Background>
    <Grid Background="#FF1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
            <FlipView Grid.Row="0">
                <Image Source="Assets/WinPage1.jpg" Stretch="UniformToFill" />

                <Image Source="Assets/WinPage2.jpg" Stretch="UniformToFill" />
                <Image Source="Assets/WinPage3.jpg" Stretch="UniformToFill" />

            </FlipView>
        <Button Width="60" Height="60" MinHeight="10" MinWidth="10" Grid.Row="1"  MaxWidth="400"  Style="{StaticResource ButtonStyle2}"  Click="EnterClick" BorderThickness="0" VerticalAlignment="Bottom" HorizontalAlignment="Stretch" Margin="0,0,0,10" >
            <Grid  >
                <Ellipse Width="60" Height="60" Fill="{StaticResource MomentThemeColor}"/>
                <SymbolIcon Symbol="Forward" Foreground="Black"/>
            </Grid>
            </Button>
        
    </Grid>
</Page>
